{% extends 'base.html.twig' %}
{% block stylesheets %}

    <style>
        .login__page {
            background-image: url('images/login_page.png'); 
            background-size: cover;
            background-position: center;
        }
    </style>                       

{% endblock %}
{% block title %}{{'Log in!'|trans|raw }}{% endblock %}
{% block body %}
<main
    class="py-6 login__page"
>
    <div 
        class="max-w-2xl mx-auto bg-light p-8 rounded-xl shadow-lg flex flex-col my-9"
    >
        <div class="sm:mx-auto sm:w-full sm:max-w-sm">
            <h2 class="text-3xl font-bold text-center text-primary mb-6 uppercase">Sign in to your account</h2>
        </div>
        <div class="mt-6 sm:mx-auto sm:w-full sm:max-w-sm">
            <form class="space-y-6" method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <div>
                    <div class="relative">
                        <input 
                            type="email" 
                            value="{{ last_username }}"
                            name="_username"
                            id="username"
                            class="block rounded-t-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50  border-0 border-b-2 border-gray-300 appearance-none  focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                            placeholder=""
                            autocomplete="email" 
                            required 
                            autofocus
                        >
                        <label 
                            for="username"
                            class="absolute text-sm text-gray-500  duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-secondary peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto"
                        >
                            {{'Email'|trans|raw}}
                        </label>
                    </div>
                </div>
                <div>
                    <div class="relative">
                        <input 
                            type="password" 
                            name="_password" 
                            id="password" 
                            class="block rounded-t-lg px-2.5 pb-2.5 pt-5 w-full text-sm text-gray-900 bg-gray-50  border-0 border-b-2 border-gray-300 appearance-none  focus:outline-none focus:ring-0 focus:border-blue-600 peer" 
                            placeholder=""
                            autocomplete="current-password" 
                            required
                        >
                        <label 
                            for="password" 
                            class="absolute text-sm text-gray-500  duration-300 transform -translate-y-4 scale-75 top-4 z-10 origin-[0] start-2.5 peer-focus:text-secondary peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-4 rtl:peer-focus:translate-x-1/4 rtl:peer-focus:left-auto"
                        >
                            {{ 'Password'|trans|raw }}
                        </label>
                    </div>
                </div>
                <input 
                    type="hidden" 
                    name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                <div class="mt-16 flex justify-center space-x-6">
                    <button 
                        class="relative text-white border border-gray-400 rounded-[10px] px-5 py-3 text-lg font-semibold uppercase tracking-wide transition-all duration-300 bg-gradient-to-r from-[#1A237E] to-[#03A9F4] hover:from-[#3949AB] hover:to-[#29B6F6]" 
                        type="submit"
                    >
                        {{ 'Sign in'|trans|raw}}
                    </button>
                    <a 
                        href="{{ path('main_index') }}" 
                        class="relative inline-block text-black border border-gray-400 rounded-[10px] px-5 py-3 text-lg font-semibold uppercase tracking-wide transition-all duration-300 bg-white hover:bg-black hover:text-white"
                    >
                        {{ 'Cancel' }}
                    </a>
                </div>
            </form>
        </div>
        <div class="flex items-center mt-4">
            <div class="flex mx-auto">
                <p class="text-sm text-gray-600 text-center">If you are not registered yet,
                    <a href="{{ path('user_register') }}" class="text-secondary hover:underline">{{ 'Create an account' |trans }}</a>
                </p> 
            </div>
        </div>

    </div>
</main>
{% endblock %}
