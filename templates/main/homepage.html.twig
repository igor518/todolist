{% extends 'base.html.twig' %}
{% block title %}
    {{ 'Welcome to TODO list' |trans|raw }}
{% endblock %}
{% block header %}
    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
        <a href="{{ path('user_register') }}" class="text-gray-700 border border-gray-400 px-5 py-3 text-lg font-semibold uppercase tracking-wide transition duration-300 hover:bg-blue-500 hover:border-blue-600 hover:text-white">{{ 'Register'|trans|raw }}</a>
        <a href="#" class="text-gray-700 border border-gray-400 px-5 py-3 text-lg font-semibold uppercase tracking-wide transition duration-300 hover:bg-blue-500 hover:border-blue-600 hover:text-white">Login</a>
    {% endif %}
{% endblock %}
{% block body %}
    <main>
        <h2>{{ 'An effective way to plan your future'|trans|raw }}</h2>
        <p>{{ 'Plan your future with our TODO list. Track your progress!'|trans|raw }}</p>
    </main>
{% endblock %}
