{% extends 'base.html.twig' %}
{% block stylesheets %}
    <style>
        @keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(200px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-200px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        .fade-in-row {
            opacity: 0;
            transition: opacity 0.8s ease-in-out, transform 0.8s cubic-bezier(0.25, 1, 0.5, 1);
        }

        .fade-in-row:nth-child(3),
        .fade-in-row:nth-child(4) {
            opacity: 0;
            transform: translateX(-200px);
            transition: opacity 0.6s ease-out, transform 0.6s ease-out;
        }

        .fade-in-row:nth-child(1),
        .fade-in-row:nth-child(2),
        .fade-in-row:nth-child(5),
        .fade-in-row:nth-child(6)  {
            transform: translateX(200px);
        }

        .fade-in-row.visible {
            opacity: 1;
            transform: translateX(0);
        }
    </style>
{% endblock %}
{% block title %}
    {{ 'DOTaskly' |trans|raw }}
{% endblock %}
{% block header %}
    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="tw:relative tw:flex tw:space-x-4 tw:font-display tw:font-semibold">
            <a href="{{ path('user_register') }}"
               class="tw:relative tw:inline-block tw:text-gray-700 tw:border tw:border-gray-400 tw:rounded-[10px] tw:px-5 tw:py-3 tw:text-lg tw:font-semibold tw:uppercase tw:tracking-wide tw:transition tw:duration-300 tw:overflow-hidden tw:hover:text-white tw:before:absolute tw:before:inset-0 tw:before:bg-white tw:before:transition tw:before:duration-300 tw:before:z-0 tw:hover:before:bg-[linear-gradient(90deg,#1A237E_-3.59%,#03A9F4_94.91%)]"
            >
                <span class="tw:relative tw:z-10">
                    {{ 'Register'|trans|raw }}
                </span>
            </a>
            <a
                href="{{ path('user_login') }}"
                class="tw:relative tw:inline-block tw:text-gray-700 tw:border tw:border-gray-400 tw:rounded-[10px] tw:px-5 tw:py-3 tw:text-lg tw:font-semibold tw:uppercase tw:tracking-wide tw:transition tw:duration-300 tw:overflow-hidden tw:hover:text-white tw:before:absolute tw:before:inset-0 tw:before:bg-white tw:before:transition tw:before:duration-300 tw:before:z-0 tw:hover:before:bg-[linear-gradient(90deg,#1A237E_-3.59%,#03A9F4_94.91%)]"
            >
                <span class="tw:relative tw:z-10">
                    {{ 'Login' |trans|raw }}
                </span>
            </a>
        </div>
    {% else %}
        <a href="{{ path('app_dashboard') }}"
           class="relative inline-block"
        >
            <span class="relative z-10">
                {{ 'Dashboard'|trans|raw }}
            </span>
        </a>
    {% endif %}
{% endblock %}
{% block body %}
    <main>
        <section 
            class="tw:w-full tw:px-6 tw:lg:px-20 tw:py-24 tw:relative tw:flex tw:items-center"
            style="background: url('{{ asset('images/background_img.png') }}') center/cover no-repeat;"
            >
            <div class="tw:max-w-5xl">
                <h1 class="tw:text-5xl tw:tracking-wide tw:text-[#1A237E] tw:text-left tw:leading-[1.5] tw:font-display tw:font-bold">
                    Organize Your Tasks, <br> Boost Your Productivity
                </h1>
                <p class="tw:mt-4 tw:text-2xl tw:text-white tw:text-left tw:font-display tw:font-semibold">
                    Dream. Plan. Achieve! &#x1F680;
                </p>
                <p class="tw:mt-4 tw:text-2xl tw:text-white text-left">
                    Set your plans for the day, week, or month. <br> Write down your goals, create to-do and dream lists, and take steps toward greatness. <br> Track your progress and accomplish more!
                </p>
                <div class="tw:mt-8 tw:flex tw:space-x-6 tw:font-display tw:font-semibold">
                    <a 
                        href="{{ path('user_register') }}" 
                        class="tw:relative tw:inline-block tw:text-white tw:border tw:border-gray-400 tw:rounded-[10px] tw:px-5 tw:py-3 tw:text-lg tw:font-semibold tw:uppercase tw:tracking-wide tw:transition-all tw:duration-300 
                        tw:bg-gradient-to-r tw:from-[#1A237E] tw:to-[#03A9F4] 
                        tw:hover:from-[#3949AB] tw:hover:to-[#29B6F6]"
                    >
                        {{ 'Get started'|trans|raw }}
                    </a>
                </div>
            </div>
        </section>
        <section class="w-full">
            <div class="py-[70px] px-6 lg:px-20">
                <h2 class="text-4xl text-center font-bold text-primary relative mb-6">
                    {{ 'Powerful Features to Elevate Your Planning' |trans|raw }}
                </h2>
                <div  
                    class="grid grid-cols-2 gap-6 p-6 mx-auto place-items-center"
                >
                    {% set items = [
                        { icon: 'fa-list-check', text: 'To-Do Lists – Plan your day, week, and month efficiently.' },
                        { icon: 'fa-cart-shopping', text: 'Shopping Lists – Keep track of everything you need at the store.' },
                        { icon: 'fa-earth-americas', text: 'Travel Lists – Prepare for trips without the chaos.' },
                        { icon: 'fa-bullseye', text: 'Dream Lists – Capture your goals and steps to achieve them.' },
                        { icon: 'fa-calendar-check', text: 'Event Lists – Stay on top of celebrations and meetings.' },
                        { icon: 'fa-gift', text: 'Gift Lists – Remember what to give and what you’d love to receive.' }
                    ] %}
                    {% for item in items %}
                        <div 
                            class="fade-in-row flex flex-col items-center justify-center p-4 rounded-xl shadow-md opacity-0"
                        >
                            <i class="text-3xl text-blue-500 mb-2 fas {{ item.icon }}"></i>
                            <p class="text-lg font-medium text-primary text-center">{{ item.text }}</p>
                        </div>
                    {% endfor %}
                </div>

            </div>
        </section>

        <section class="w-full">
            <div class="py-[70px] px-6 lg:px-20">
                <h2 class="text-4xl text-center font-bold text-primary relative">
                    {{ 'Why TickTick?' |trans|raw }}
                </h2>
            </div>
        </section>

        <section>

        </section>

    </main>
{% endblock %}
