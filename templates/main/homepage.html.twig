{% extends 'base.html.twig' %}
{% block title %}
    {{ 'DOTaskly' |trans|raw }}
{% endblock %}
{% block header %}
    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="tw:relative tw:flex tw:space-x-4 tw:font-display tw:font-semibold">
            <a href="{{ path('user_register') }}"
               class="tw:relative tw:inline-block tw:text-gray-700 tw:border tw:border-gray-400 tw:rounded-[10px] tw:px-5 tw:py-3 tw:text-lg tw:font-semibold tw:uppercase tw:tracking-wide tw:transition tw:duration-300 tw:overflow-hidden tw:hover:text-white tw:before:absolute tw:before:inset-0 tw:before:bg-white tw:before:transition tw:before:duration-300 tw:before:z-0 tw:hover:before:bg-[linear-gradient(90deg,#1A237E_-3.59%,#03A9F4_94.91%)]"
            >
                <span class="tw:relative tw:z-10">
                    {{ 'Register'|trans|raw }}
                </span>
            </a>
            <a
                href="{{ path('user_login') }}"
                class="tw:relative tw:inline-block tw:text-gray-700 tw:border tw:border-gray-400 tw:rounded-[10px] tw:px-5 tw:py-3 tw:text-lg tw:font-semibold tw:uppercase tw:tracking-wide tw:transition tw:duration-300 tw:overflow-hidden tw:hover:text-white tw:before:absolute tw:before:inset-0 tw:before:bg-white tw:before:transition tw:before:duration-300 tw:before:z-0 tw:hover:before:bg-[linear-gradient(90deg,#1A237E_-3.59%,#03A9F4_94.91%)]"
            >
                <span class="tw:relative tw:z-10">
                    {{ 'Login' |trans|raw }}
                </span>
            </a>
        </div>
    {% endif %}
{% endblock %}
{% block body %}
    <main>
        {# Hero Section #}
        <section 
            class="tw:w-full tw:px-6 tw:lg:px-20 tw:py-24 tw:relative tw:flex tw:items-center"
            style="background: url('{{ asset('images/background_img.png') }}') center/cover no-repeat;"
        >
            <div class="tw:max-w-5xl">
                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <h1 class="tw:text-5xl tw:tracking-wide tw:text-[#1A237E] tw:text-left tw:leading-[1.5] tw:font-display tw:font-bold">
                        Organize Your Tasks, <br> Boost Your Productivity
                    </h1>
                    <p class="tw:mt-4 tw:text-2xl tw:text-white tw:text-left tw:font-display tw:font-semibold">
                        Dream. Plan. Achieve! üöÄ
                    </p>
                    <p class="tw:mt-4 tw:text-2xl tw:text-white text-left">
                        Set your plans for the day, week, or month. <br>
                        Write down your goals, create to-do and dream lists, and take steps toward greatness. <br>
                        Track your progress and accomplish more!
                    </p>
                {% else %}
                    <h1 class="tw:text-5xl tw:tracking-wide tw:text-[#1A237E] tw:text-left tw:leading-[1.5] tw:font-display tw:font-bold">
                        Welcome back, {{ app.user.firstname }}! üôå
                    </h1>
                    <p class="tw:mt-4 tw:text-2xl tw:text-white tw:text-left tw:font-display tw:font-semibold">
                        Your tasks are waiting. Let's get things done. ‚úÖ
                    </p>
                    <p class="tw:mt-4 tw:text-2xl tw:text-white text-left">
                        Head to your dashboard to check your current tasks, <br> 
                        refresh your personal goals, reflect on your achievements, review your progress, <br>
                        and confidently keep moving forward on the path to focus,<br>
                        effectiveness, and a sense of balance.
                    </p>
                {% endif %}
                <div class="tw:mt-8 tw:flex tw:space-x-6 tw:font-display tw:font-semibold">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <a 
                            href="{{ path('app_dashboard') }}" 
                            class="tw:relative tw:inline-block tw:text-white tw:border tw:border-gray-400 tw:rounded-[10px] tw:px-5 tw:py-3 tw:text-lg tw:font-semibold tw:uppercase tw:tracking-wide tw:transition-all tw:duration-300 
                            tw:bg-gradient-to-r tw:from-[#1A237E] tw:to-[#03A9F4] 
                            tw:hover:from-[#3949AB] tw:hover:to-[#29B6F6]"
                        >
                            {{ 'Dashboard'|trans|raw }}
                        </a>
                    {% else %}
                        <a 
                            href="{{ path('user_register') }}" 
                            class="tw:relative tw:inline-block tw:text-white tw:border tw:border-gray-400 tw:rounded-[10px] tw:px-5 tw:py-3 tw:text-lg tw:font-semibold tw:uppercase tw:tracking-wide tw:transition-all tw:duration-300 
                            tw:bg-gradient-to-r tw:from-[#1A237E] tw:to-[#03A9F4] 
                            tw:hover:from-[#3949AB] tw:hover:to-[#29B6F6]"
                        >
                            {{ 'Get started'|trans|raw }}
                        </a>
                    {% endif %}
                </div>
            </div>
        </section>

        {# Features Section #}
        <section class="tw:bg-blue-50 tw:py-16">
            <div class="tw:max-w-6xl tw:mx-auto tw:px-4">
                <h2 class="tw:text-3xl tw:font-bold tw:text-center tw:mb-12 tw:text-blue-900">Why Choose DOTaskly?</h2>
                <div class="tw:grid tw:grid-cols-1 md:tw:grid-cols-3 tw:gap-8">
                    <div class="tw:bg-white tw:p-8 tw:rounded-xl tw:shadow tw:flex tw:flex-col tw:items-center tw:transition tw:duration-300 tw:hover:tw:shadow-lg">
                        <i class="fa-solid fa-bolt tw:text-blue-500 tw:text-3xl tw:mb-4"></i>
                        <h3 class="tw:font-semibold tw:text-xl tw:mb-2 tw:text-blue-800">Easy to Use</h3>
                        <p class="tw:text-gray-600 tw:text-center">Intuitive interface lets you create, organize, and track your tasks effortlessly.</p>
                    </div>
                    <div class="tw:bg-white tw:p-8 tw:rounded-xl tw:shadow tw:flex tw:flex-col tw:items-center tw:transition tw:duration-300 tw:hover:tw:shadow-lg">
                        <i class="fa-solid fa-layer-group tw:text-blue-500 tw:text-3xl tw:mb-4"></i>
                        <h3 class="tw:font-semibold tw:text-xl tw:mb-2 tw:text-blue-800">Stay Organized</h3>
                        <p class="tw:text-gray-600 tw:text-center">Manage multiple lists, set deadlines, and keep your priorities clear.</p>
                    </div>
                    <div class="tw:bg-white tw:p-8 tw:rounded-xl tw:shadow tw:flex tw:flex-col tw:items-center tw:transition tw:duration-300 tw:hover:tw:shadow-lg">
                        <i class="fa-solid fa-chart-line tw:text-blue-500 tw:text-3xl tw:mb-4"></i>
                        <h3 class="tw:font-semibold tw:text-xl tw:mb-2 tw:text-blue-800">Boost Productivity</h3>
                        <p class="tw:text-gray-600 tw:text-center">Track your progress and achieve your goals with powerful task management tools.</p>
                    </div>
                </div>
            </div>
        </section>

        {# Testimonials Section #}
        <section class="tw:bg-white tw:py-16">
            <div class="tw:max-w-4xl tw:mx-auto tw:px-4">
                <h2 class="tw:text-3xl tw:font-bold tw:text-center tw:mb-12 tw:text-blue-900">What Our Users Say</h2>
                <div class="tw:grid tw:grid-cols-1 md:tw:grid-cols-2 tw:gap-8">
                    <div class="tw:bg-blue-100 tw:p-8 tw:rounded-xl tw:shadow tw:flex tw:flex-col">
                        <p class="tw:italic tw:mb-2 tw:text-lg tw:text-blue-900">‚ÄúDOTaskly has transformed the way I organize my work. Highly recommended!‚Äù</p>
                        <span class="tw:font-semibold tw:text-blue-700 tw:mt-2">‚Äî Alex P.</span>
                    </div>
                    <div class="tw:bg-blue-100 tw:p-8 tw:rounded-xl tw:shadow tw:flex tw:flex-col">
                        <p class="tw:italic tw:mb-2 tw:text-lg tw:text-blue-900">‚ÄúSimple, clean, and effective. I get more done every day.‚Äù</p>
                        <span class="tw:font-semibold tw:text-blue-700 tw:mt-2">‚Äî Maria S.</span>
                    </div>
                </div>
            </div>
        </section>

        {# FAQ Section #}
        <section class="tw:bg-blue-50 tw:py-16">
            <div class="tw:max-w-4xl tw:mx-auto tw:px-4">
                <h2 class="tw:text-3xl tw:font-bold tw:text-center tw:mb-12 tw:text-blue-900">Frequently Asked Questions</h2>
                <div class="tw:space-y-8">
                    <div class="tw:bg-white tw:p-6 tw:rounded-xl tw:shadow">
                        <h3 class="tw:font-semibold tw:text-blue-800">Is DOTaskly free?</h3>
                        <p class="tw:text-gray-600">Yes! DOTaskly is free to use for personal productivity.</p>
                    </div>
                    <div class="tw:bg-white tw:p-6 tw:rounded-xl tw:shadow">
                        <h3 class="tw:font-semibold tw:text-blue-800">Can I use DOTaskly on my phone?</h3>
                        <p class="tw:text-gray-600">DOTaskly is fully responsive and works great on all devices.</p>
                    </div>
                    <div class="tw:bg-white tw:p-6 tw:rounded-xl tw:shadow">
                        <h3 class="tw:font-semibold tw:text-blue-800">How do I get started?</h3>
                        <p class="tw:text-gray-600">Just register for an account and start creating your first task list!</p>
                    </div>
                </div>
            </div>
        </section>

        <footer class="tw:bg-blue-900 tw:py-8 tw:mt-12">
            <div class="tw:max-w-5xl tw:mx-auto tw:text-center tw:text-blue-100 tw:text-lg">
                &copy; {{ "now"|date("Y") }} DOTaskly. All rights reserved.
            </div>
        </footer>
    </main>
{% endblock %}
