<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('images/favicon.svg') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="tw:block tw:px-6">
            <nav class="tw:relative tw:flex tw:items-center tw:justify-between">
                <a href="{% if not is_granted('IS_AUTHENTICATED_FULLY') %}/{% else %}#{% endif %}" class="tw:flex tw:items-center tw:h-24 tw:py-2">
                    <img src="{{ asset('images/logo.svg') }}" alt="DoTaskly" class="h-auto">
                </a>
                <div class="tw:flex tw:items-center tw:gap-4">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div x-data="{ open: false }" class="tw:relative tw:inline-block tw:text-left">
                        <button @click="open = !open" class="tw:flex tw:gap-4 tw:px-4 tw:py-2 tw:text-primary tw:font-display tw:text-lg tw:font-medium tw:rounded-md tw:cursor-pointer tw:focus:outline-none">
                            {{'Hello,' |trans|raw }} {{ app.user.firstname }} {{ app.user.lastname }}
                                <img 
                                    :src="open ? '{{ asset('images/chevron-up.svg') }}' : '{{ asset('images/chevron-down.svg') }}'" 
                                    alt="Chevron icon" 
                                    class="tw:w-4 tw:h-4 tw:m-auto"
                                >
                        </button>

                        <div x-show="open" @click.away="open = false" class="tw:absolute tw:mt-1 tw:w-56 tw:rounded-md tw:shadow-lg tw:bg-light tw:ring-opacity-5 tw:z-50 tw:flex tw:justify-center tw:items-center">
                            <div class="tw:py-1">
                                {% if app.request.attributes.get('_route') != 'app_dashboard' %}
                                    <a 
                                        href="{{ path('app_dashboard') }}" 
                                        class="tw:block tw:text-center tw:rounded tw:px-4 tw:py-2 tw:text-lg tw:font-text tw:text-dark tw:hover:bg-text-gray tw:active:bg-text-gray"
                                    >
                                        {{ 'Dashboard'|trans|raw }}
                                    </a>
                                {% endif %}
                            <form action="{{ path('app_logout') }}" method="post">
                                <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                                <button 
                                    type="submit"
                                    class="tw:block tw:text-center tw:rounded tw:px-4 tw:py-2 tw:text-lg tw:font-text tw:text-dark tw:hover:bg-text-gray tw:cursor-pointer"
                                >
                                {{ 'Logout'|trans|raw }}
                                </button>
                            </form>
                            </div>
                        </div>
                        </div>
                    {% endif %}
                    {% block header %}{% endblock %}
                </div>
            </nav>
        </header>

        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js" defer></script>
    </body>
</html>
