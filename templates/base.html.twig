<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="tw:block tw:px-6">
            <nav class="tw:relative tw:flex tw:items-center tw:justify-between">
                <a href="/" class="tw:flex tw:items-center tw:h-24 tw:py-2">
                    <img src="{{ asset('images/logo.svg') }}" alt="TickTick" class="h-auto">
                </a>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <p>{{ 'Hello,' |trans|raw }} {{ app.user.firstname }} {{ app.user.lastname }} !</p>
                    <form action="{{ path('app_logout') }}" method="post">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                        <button type="submit">{{ 'Logout'|trans|raw }}</button>
                    </form>
                {% endif %}
                {% block header %}{% endblock %}
            </nav>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
